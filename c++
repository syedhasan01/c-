Basic arithematic operations 

#include<iostream>
#include<cmath>
using namespace std;

int main()
{
	int a,b,c,x,y,z;
	cout<<"enter the values of x , y and z"<<endl;
	cin>>a>>b>>c;
	x=sqrt(b*b-4*a*c);
	y=-b+d/2*a;
	z=-b-d/2*a;
	cout<<" calculate the roots of the quadratic equation "<<endl;
	cout<<y<<endl;
	cout<<z<<endl;

	return 0;
	
}
